{
  "name": "berenson.me",
  "version": "1.0.0",
  "description": "My personal/portfolio website.",
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "cpx": "^1.5.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.5.2",
    "normalize.css": "^7.0.0",
    "npm-run-all": "^4.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "simplifyify": "^3.2.1",
    "surge": "^0.19.0",
    "watch": "^1.0.2"
  },
  "browserify": {
    "transform": [
      "babelify",
      {
        "presets": [
          "es2015"
        ]
      }
    ]
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:pug": "pug -O src/pug/globals.json src/pug/ -o dist/ && rimraf dist/templates",
    "build:scripts": "simplifyify -o dist/scripts src/scripts/*.js",
    "build:styles": "node-sass --output-style compressed --include-path node_modules src/styles/ -o dist/styles",
    "build:fonts": "cpx \"src/fonts/*\" \"dist/fonts\"",
    "build:images": "imagemin src/images/*.{jpeg,jpg,png,svg,ico} -o dist/images",
    "prebuild": "npm run clean",
    "build": "npm run build:pug && npm run build:styles && npm run build:images && npm run build:fonts",
    "watch:pug": "watch \"npm run build:pug\" src/pug",
    "watch:scripts": "watch \"npm run build:scripts\" src/scripts",
    "watch:styles": "watch \"npm run build:styles\" src/styles",
    "watch:fonts": "watch \"npm run build:fonts\" src/fonts",
    "watch:images": "watch \"npm run build:images\" src/images",
    "watch": "npm-run-all watch:pug watch:scripts watch:styles watch:fonts watch:images -c -p",
    "predeploy": "npm run build",
    "deploy": "surge -p dist -d berenson.me",
    "postdeploy": "npm run clean"
  },
  "author": "Spencer Berenson",
  "license": "MIT"
}
