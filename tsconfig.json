{
	"extends": "@tsconfig/next",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		".eslintrc.js",
		".next/types/**/*.ts",
		"**/*.ts",
		"**/*.tsx",
		"commitlint.config.js",
		"next.config.mjs",
		"next-env.d.ts",
		"postcss.config.js",
		"tailwind.config.js"
	],
	"exclude": ["node_modules"]
}
