doctype html
html(lang="en")
	head
		include partials/head.pug

mixin link(link, text, tab = true)
	a.font-bold.text-yellow-300(
		class="hover:underline"
		href=link
		rel="noreferrer noopener"
		target=tab ? '_blank' : null
	)&attributes(attributes)= text
		block

mixin navigation(links)
	nav.mt-12.mb-3
		ul
			each link in links
				li.inline-block.mr-3
					+link(link.link, link.text)

mixin paragraph
	p.my-3.p-0
		block

